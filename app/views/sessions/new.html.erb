
<header class="sign-in">
  <div class="logo-image"></div>
  <h1>Sign in</h1>
</header>

<div class="sign-in">
  <form action="<%= session_url %>" method="post">
    <%= auth_token %>

    <label>Username or Email:
      <input type="text" name="user[username]" value="">
    </label>

    <label>Password:
      <input type="password" name="user[password]" value="">
      <ul>
        <% if flash[:errors] %>
          <% flash[:errors].each do |error| %>
            <li><%= error + "." %></li>
          <% end %>
        <% end %>
      </ul>
    </label>

    <button type="submit">Sign in</button>

  </form>

  <form class="sign-in" action="<%= session_url %>" method="post">
    <%= auth_token %>
    <input type="hidden" name="user[username]" value="EdgarAllenPoe">
    <input type="hidden" name="user[password]" value="password">

    <button type="submit">Demo Login</button>
  </form>
</div>

<footer class="sign-in">
  <span>Don't have an account?</span>
  <a href="<%= new_user_url %>">Create account</a>
</footer>
