<img src="" alt="Raven Logo" />
<h1>Sign in</h1>

<div class="sign-in">
  <form action="<%= session_url %>" method="post">
    <%= auth_token %>

    <label>Username or Email:
      <input type="text" name="user[username]" value="">
    </label>

    <label>Password:
      <input type="password" name="user[password]" value="">
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <span><%= error + "." %></span>
        <% end %>
      <% end %>
    </label>

    <button type="submit">Sign in</button>

  </form>

  <form class="demo-login" action="<%= session_url %>" method="post">
    <%= auth_token %>
    <input type="hidden" name="user[username]" value="EdgarAllenPoe">
    <input type="hidden" name="user[password]" value="password">

    <button type="submit">Demo Login</button>
  </form>
</div>

<footer>
  <span>Don't have an account?</span>
  <a href="<%= new_user_url %>">Create account</a>
</footer>
